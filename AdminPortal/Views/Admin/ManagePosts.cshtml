@{
    ViewData["Title"] = "Manage Posts";
}
@using MessageBoardClassLibrary.Models;
@model AdminViewModel
<link rel="stylesheet" href="~/css/DeletionConfirmation.css" asp-append-version="true" />

<h1>Manage Schools</h1>

<form asp-action="ManagePosts" method="get">
    <div class="form-actions no-color">
        <p>
            Find by post name: <input type="text" name="SearchString" value="" />
            <input type="submit" value="Search" class="btn btn-default" /> |
            <a asp-action="ManagePosts">Back to Full List</a>
        </p>
    </div>
</form>

<table class="table table-striped table-hover table-responsive">
    <thead>
        <tr>
            <th><a class="_noDecoration" href="@Url.Action("ManagePosts", new { sortField = "postTitle", sortOrder = ViewBag.SortOrder })">Title</a></th>
            <th>Description</th>
            <th><a class="_noDecoration" href="@Url.Action("ManagePosts", new { sortField = "mediaNumber", sortOrder = ViewBag.SortOrder })">Media</a></th>
            <th><a class="_noDecoration" href="@Url.Action("ManagePosts", new { sortField = "postDate", sortOrder = ViewBag.SortOrder })">Date Posted</a></th>
            <th><a class="_noDecoration" href="@Url.Action("ManagePosts", new { sortField = "postUser", sortOrder = ViewBag.SortOrder })">User</a></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Post post in Model.Posts)
        {
            <tr>
                <td>@post.Title</td>
                <td>@post.Description</td>
                <td>@post.Media.Count</td>
                <td>@post.DatePosted</td>
                <td>@post.User.FirstName @post.User.LastName</td>
                <td><a class="btn btn-primary" href="@Url.Action("EditPost", new{PostId = post.Id})">Edit</a></td>
            </tr>
        }
    </tbody>
</table>

